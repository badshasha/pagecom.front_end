@model pagecom.mvc.application.Dto.Book.BookViewDto

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container px-4 px-lg-5">
        <a class="navbar-brand" href="#!">create prodcut</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">

        </div>
    </div>
</nav>


<section class="py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5 align-items-center">
                    <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg" alt="..." /></div>
                    <div class="col-md-6">
                        
                            <form asp-controller="Book" asp-action="Create"  method="post">
                                <div class="form-group">
                                    <label asp-for="@Model.Name"></label>
                                    <input class="form-control" aria-describedby="emailHelp" asp-for="@Model.Name" placeholder="Enter email">
                                    <small id="emailHelp" class="form-text text-muted">after submit you cannot undo this </small>
                                </div>
                        
                                <div class="form-group">
                                    <label asp-for="@Model.Description"></label>
                                    <input class="form-control" asp-for="@Model.Description" >                            
                                </div>
                            
                                <div class="form-group">
                                    <label asp-for="@Model.Price"></label>
                                    <input class="form-control"  asp-for="@Model.Price" >
                                </div>
                                                   
                                               
                                <input  type="submit" class="btn btn-primary mt-2">Submit</input>
                                
                            </form>
                        
                        
                    </div>
                </div>
            </div>
        </section>
